<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- to force black textcolor for buttons -->
    <style name="buttonBlackText" parent="@style/Widget.Material3.Button">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Base theme for Launcher -->
    <style name="launcherBaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/finnmglasTheme_accent_color</item>
        <item name="colorSecondary">@color/finnmglasTheme_accent_color</item>
        <item name="colorSurface">@color/finnmglasTheme_background_color</item>
        <item name="colorOnSurface">@color/finnmglasTheme_text_color</item>
        <item name="android:colorBackground">@color/finnmglasTheme_background_color</item>

        <item name="android:textColor">@color/finnmglasTheme_text_color</item>
        <item name="android:textColorSecondary">?android:textColor</item>
        <item name="android:textColorPrimary">?android:textColor</item>
        <item name="android:textColorHint">?android:textColor</item>

        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>

        <!--<item name="android:popupMenuStyle">@style/PopupMenuCustom</item>-->

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/WindowFadeTransition</item>
    </style>

    <style name="launcherHomeTheme" parent="launcherBaseTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="colorThemeDark">
        <item name="colorPrimary">@color/darkTheme_accent_color</item>
        <item name="colorSecondary">@color/darkTheme_accent_color</item>
        <item name="colorSurface">@color/darkTheme_background_color</item>
        <item name="colorOnSurface">@color/darkTheme_text_color</item>
        <item name="android:colorBackground">@color/darkTheme_background_color</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/darkTheme_text_color</item>
    </style>

    <style name="colorThemeGreen">
        <item name="colorPrimary">#0f0</item>
        <item name="colorSecondary">#0f0</item>
        <item name="colorSurface">@color/darkTheme_background_color</item>
        <item name="colorOnSurface">#0f0</item>
        <item name="materialButtonStyle">@style/buttonBlackText</item>
        <item name="android:colorBackground">@color/darkTheme_background_color</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:textColor">#0f0</item>
    </style>

    <style name="colorThemeAmber">
        <item name="colorPrimary">#FFB000</item>
        <item name="colorSecondary">#FFB000</item>
        <item name="colorSurface">@color/darkTheme_background_color</item>
        <item name="colorOnSurface">#ffb000</item>
        <item name="materialButtonStyle">@style/buttonBlackText</item>
        <item name="android:colorBackground">@color/darkTheme_background_color</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:textColor">#ffb000</item>
    </style>


    <style name="colorThemeDefault">
        <item name="colorPrimary">@color/finnmglasTheme_accent_color</item>
        <item name="colorSecondary">@color/finnmglasTheme_accent_color</item>
        <item name="colorSurface">@color/finnmglasTheme_background_color</item>
        <item name="colorOnSurface">@color/finnmglasTheme_text_color</item>
        <item name="android:colorBackground">@color/finnmglasTheme_background_color</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/finnmglasTheme_text_color</item>
    </style>

    <style name="colorThemeLight" tools:keep="@style/colorThemeLight">
        <item name="colorPrimary">@color/lightTheme_accent_color</item>
        <item name="colorSecondary">@color/lightTheme_accent_color</item>
        <item name="colorSurface">@color/lightTheme_background_color</item>
        <item name="colorOnSurface">@color/lightTheme_text_color</item>
        <item name="android:colorBackground">@color/lightTheme_background_color</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:textColor">@color/lightTheme_text_color</item>
    </style>

    <style name="colorThemeDynamic">
        <!-- Primary -->
        <item name="colorPrimary">@color/material_dynamic_primary80</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary20</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary30</item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_primary90</item>
        <!-- Secondary -->
        <item name="colorSecondary">@color/material_dynamic_secondary80</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary20</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary30</item>
        <item name="colorOnSecondaryContainer">@color/material_dynamic_secondary90</item>
        <!-- Tertiary -->
        <item name="colorTertiary">@color/material_dynamic_tertiary80</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary20</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary30</item>
        <item name="colorOnTertiaryContainer">@color/material_dynamic_tertiary90</item>
        <!-- Neutral / Surface -->
        <item name="colorSurface">@color/material_dynamic_neutral10</item>
        <item name="colorOnSurface">@color/material_dynamic_neutral90</item>
        <item name="colorSurfaceVariant">@color/material_dynamic_neutral_variant30</item>
        <item name="colorOnSurfaceVariant">@color/material_dynamic_neutral_variant80</item>
        <item name="colorOutline">@color/material_dynamic_neutral_variant60</item>
        <item name="android:colorBackground">@color/material_dynamic_neutral10</item>
        <item name="colorOnBackground">@color/material_dynamic_neutral90</item>
        <!-- Custom overrides -->
        <item name="cardBackgroundColor">@color/material_dynamic_neutral_variant30</item>
        <item name="android:textColor">@color/material_dynamic_neutral90</item>
    </style>

    <style name="textShadow">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="textShadowLight" parent="textShadow">
        <item name="android:shadowColor">#aaa</item>
    </style>


    <style name="backgroundWallpaper">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="backgroundSolid">
        <!-- solid background (no wallpaper) -->
    </style>

    <style name="fontSystemDefault">
        <!--<item name="android:textSize">18sp</item>-->
    </style>

    <style name="fontHack">
        <item name="android:fontFamily">@font/hack</item>
        <!--<item name="android:textSize">18sp</item>-->
    </style>

    <style name="fontMonospace">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="fontSerifMonospace">
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="fontSansSerif">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="fontSerif" tools:keep="@style/fontSerif">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="PopupMenuCustom" parent="@android:style/Widget.PopupMenu" tools:keep="@style/PopupMenuCustom">
        <item name="android:popupBackground">#252827</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textColor">@color/text_color_toggle</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="AlertDialogDanger" parent="AlertDialogCustom">
        <item name="buttonTint">#ff0000</item>
    </style>

    <!-- Set the fade in animation on all activities by default -->
    <style name="WindowFadeTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
